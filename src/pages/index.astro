---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import { homePageContent, identity, skills } from "../config";
import SocialLink from "../components/SocialLink.astro";
import Link from "../components/Link.astro";
import { getCollection } from "astro:content";

const posts = await getCollection("posts");
posts.sort((a, b) => {
  const dateA = new Date(a.data.pubDate).getTime();
  const dateB = new Date(b.data.pubDate).getTime();
  return dateB - dateA;
});
const recentPosts = posts.slice(0, 2);
---

<Layout seo={homePageContent.seo}>
  <section class="mt-10 max-w-2xl mx-auto px-6">
    <h1 class="font-bold text-3xl mb-1">{identity.name}</h1>
    <p class="opacity-60 mb-10">{homePageContent.role}</p>
    <div class="flex flex-col min-[520px]:flex-row gap-6 mb-8">
      <Image
        src={identity.logo}
        alt={identity.name}
        width={100}
        height={100}
        class="rounded-full w-[100px] h-[100px] object-cover"
      />
      <div class="group flex flex-col justify-center gap-2 w-fit">
        {
          homePageContent.socialLinks.map((link) => (
            <SocialLink
              title={link.title}
              url={link.url}
              icon={link.icon}
              external={link.external}
            />
          ))
        }
      </div>
    </div>
    
    <p class="max-w-md mb-8">
      {homePageContent.description}
    </p>

    <div class="mb-10">
      <h2 class="text-sm font-bold opacity-60 mb-4 uppercase tracking-wider text-white">Expertise</h2>
      <div class="flex flex-wrap gap-2">
        {
          skills.map((skill) => (
            <span class="px-3 py-1 bg-white/10 rounded-full text-xs font-medium text-white opacity-80 hover:opacity-100 transition-opacity border border-white/5">
              {skill}
            </span>
          ))
        }
      </div>
    </div>

    <div class="flex items-center gap-4 group w-fit">
      {
        homePageContent.links.map((link) => (
          <Link text={link.title} href={link.url} external={link.external} />
        ))
      }
    </div>
  </section>

  <section class="mt-20 max-w-2xl mx-auto px-6">
    <h2 class="mb-8 font-bold text-xl text-white">Recent Articles</h2>
    <div class="grid grid-cols-1 gap-10 sm:gap-6 mb-10">
      {
        recentPosts.map((post) => (
          <a href={`/blog/${post.id}`} class="post group p-4 -mx-4 rounded-xl hover:bg-white/5 transition-colors">
            <div class="sm:my-auto">
              <p class="opacity-60 mb-2 text-sm text-white">
                {post.data.pubDate.toLocaleDateString("en-US", {
                  year: "numeric",
                  month: "long",
                  day: "numeric",
                })}
              </p>
              <h3 class="font-medium text-white group-hover:underline underline-offset-4 decoration-white/30 truncate">
                {post.data.title}
              </h3>
              <p class="text-sm opacity-60 text-white mt-1 line-clamp-1">
                {post.data.description}
              </p>
            </div>
          </a>
        ))
      }
    </div>
    <div class="text-center">
      <a
        href="https://medium.com/@rello4585"
        target="_blank"
        class="text-sm underline underline-offset-4 opacity-60 hover:opacity-100 transition-opacity text-white"
        >View more on Medium</a
      >
    </div>
  </section>
</Layout>
